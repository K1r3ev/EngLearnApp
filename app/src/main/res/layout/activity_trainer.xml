<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerActivity"
    android:background="#0066FF">


    <TextView
        android:id="@+id/tvQuestionWord"
        android:layout_width="310dp"
        android:layout_height="91dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:text="BLABLABLKA"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:id="@+id/layoutVariants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.6">
    <LinearLayout
        android:id="@+id/layoutAnswer1"
        android:layout_width="336dp"
        android:layout_height="66dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_round"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutAnswer1">


        <TextView
            android:id="@+id/tvVariantNumber1"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round_num"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvVariantValue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/press_start_2p"
            android:text="dsadasdsadasd"
            android:textColor="@color/black"></TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAnswer2"
        android:layout_width="336dp"
        android:layout_height="66dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_round"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionWord">


        <TextView
            android:id="@+id/tvVariantNumber2"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round_num"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvVariantValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/press_start_2p"
            android:text="dsadasdsadasd"
            android:textColor="@color/black">
        </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutAnswer3"
        android:layout_width="336dp"
        android:layout_height="66dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_round"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutAnswer2">


        <TextView
            android:id="@+id/tvVariantNumber3"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round_num"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvVariantValue3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/press_start_2p"
            android:text="dsadasdsadasd"
            android:textColor="@color/black"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAnswer4"
        android:layout_width="336dp"
        android:layout_height="66dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_round"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutAnswer3">


        <TextView
            android:id="@+id/tvVariantNumber4"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round_num"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvVariantValue4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/press_start_2p"
            android:text="dsadasdsadasd"
            android:textColor="@color/black"></TextView>
    </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/press_start_2p"
        android:text="Skip"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutResult"
        android:layout_width="417dp"
        android:layout_height="122dp"
        android:background="@color/correctAnswerColor"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvResultMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/press_start_2p"
            android:text="Correct!"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="336dp"
            android:layout_height="59dp"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="21dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/press_start_2p"
            android:text="Continue"
            android:textAllCaps="true"
            android:textColor="@color/correctAnswerColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>